

// user: root
docker run --name mokstats-mysql -p 3306:3306 -e MYSQL_ROOT_PASSWORD=mokstats -e MYSQL_DATABASE=mokstats -e MYSQL_USER=mokstats -e MYSQL_PASSWORD=mokstats -d mysql:8.4.5



docker run --name mokstats-postgres -p 5432:5432 -e POSTGRES_USER=mokstats -e POSTGRES_PASSWORD=mokstats -e POSTGRES_DB=mokstats -d postgres:17


